.l_content_inner
  .org_info

  == render 'shared/errors', record: brand

  = form_with model: [:admin, brand], local: true do |f|
    .form-group
      = f.label :name, '名前', class: 'require'
      = f.text_field :name, class: 'form-control'

    .org_info_btns
      .mol_info_btns.actions

        - if brand.persisted?
          .atm_info_btn = link_to '一覧へ戻る', admin_brands_path, class: 'btn btn-outline-secondary'
          .atm_info_btn = link_to '詳細', brand, class: 'btn btn-outline-info'
          .atm_info_btn = f.button '更新', class: 'btn btn-success'
        - else
          .atm_info_btn = link_to '一覧へ戻る', admin_brands_path, class: 'btn btn-outline-secondary'
          .atm_info_btn = f.button '登録', class: 'btn btn-success'
